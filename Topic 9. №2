#include <iostream>
#include <cctype> 

using namespace std;

bool areStringsEqualIgnoreCase(const string& str1, const string& str2) {
    if (str1.length() != str2.length()) {
        return false; // Если длины разные,то строки не равны
    }

    for (size_t i = 0; i < str1.length(); ++i) {
        if (tolower(str1[i]) != tolower(str2[i])) {
            return false; // Если символы не равны, выводим false
        }
    }

    return true; // Если все символы равны, выводим true
}

int main() {
    string string1, string2;

    cout << "Enter the first line: ";
    getline(cin, string1);

    cout << "Enter the second line: ";
    getline(cin, string2);

    if (areStringsEqualIgnoreCase(string1, string2)) {
        cout << "The strings are equal " << endl;
    } else {
        cout << "The strings are not equal" << endl;
    }

    return 0;
}
