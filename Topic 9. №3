#include <iostream>

using namespace std;

int power(int a, int n) {
    if (n == 0) {
        return 1; // a^0 = 1
    } else if (n < 0) {
        return 0; 
    } else {
        return a * power(a, n - 1);
    }
}

int main() {
    int a, n;

    cout << "Enter the number a: ";
    cin >> a;
    cout << "Enter the degree of n: ";
    cin >> n;

    int result = power(a, n);
    cout << a << "^" << n << " = " << result << endl;

    return 0;
}
