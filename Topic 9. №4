#include <iostream>

using namespace std;
 
int stringLength(const string& str) {
    int length = 0;
    // Перебираем символы строки
    for (char ch : str) {
        length++; // Увеличиваем счетчик для каждого символа
    }
    return length; // Возвращаем длину строки
}

int main() {
    string input;

    cout << "Enter the line: ";
    getline(cin, input); 

    int length = stringLength(input);
    cout << "Number of characters in the string: " << length << endl;

    return 0;
}
